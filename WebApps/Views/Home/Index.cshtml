@model IEnumerable<WebApps.Models.Course.Courses>
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row">
        <h4>Course details</h4>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th class="th" scope="col">Course ID</th>
                        <th class="th" scope="col">Course Name</th>
                        <th class="th" scope="col">Course Rating</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <th scope="row">@i.CourseID</th>
                            <td>@i.CourseName</td>
                            <td>@i.Rating</td>
                        </tr>
                    }

                </tbody>
            </table>
        }
        else { <h4 class="text-center">No Record Found !!!</h4>}
    </div>
</div>
